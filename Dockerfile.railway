# Railway deployment Dockerfile for backend-diffs service
FROM python:3.11-slim

WORKDIR /app

# Copy backend-diffs service files
COPY backend-diffs/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY backend-diffs/main.py .

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD python -c "import requests; requests.get('http://localhost:8000/health')"

# Run the application
CMD ["python", "main.py"]
