{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://project-beacon.dev/schemas/jobspec.schema.json",
  "title": "Project Beacon JobSpec",
  "type": "object",
  "required": ["id", "version", "benchmark", "constraints", "created_at", "signature", "public_key"],
  "properties": {
    "id": {"type": "string", "minLength": 1},
    "version": {"type": "string", "minLength": 1},
    "benchmark": {
      "type": "object",
      "required": ["name", "container", "input"],
      "properties": {
        "name": {"type": "string", "minLength": 1},
        "description": {"type": "string"},
        "container": {
          "type": "object",
          "required": ["image"],
          "properties": {
            "image": {"type": "string", "minLength": 1},
            "tag": {"type": "string"},
            "command": {"type": "array", "items": {"type": "string"}},
            "environment": {"type": "object", "additionalProperties": {"type": "string"}},
            "resources": {
              "type": "object",
              "properties": {
                "cpu": {"type": "string"},
                "memory": {"type": "string"},
                "gpu": {"type": "string"}
              },
              "required": ["cpu", "memory"]
            }
          },
          "additionalProperties": false
        },
        "input": {
          "type": "object",
          "required": ["type", "data", "hash"],
          "properties": {
            "type": {"type": "string"},
            "data": {"type": "object"},
            "hash": {"type": "string", "minLength": 1}
          },
          "additionalProperties": true
        },
        "scoring": {
          "type": "object",
          "properties": {
            "method": {"type": "string"},
            "parameters": {"type": "object"}
          },
          "additionalProperties": true
        },
        "metadata": {"type": "object"}
      },
      "additionalProperties": false
    },
    "constraints": {
      "type": "object",
      "required": ["regions"],
      "properties": {
        "regions": {"type": "array", "items": {"type": "string"}, "minItems": 1},
        "min_regions": {"type": "integer", "minimum": 1},
        "timeout": {"type": "string"},
        "providers": {"type": "array"}
      },
      "additionalProperties": true
    },
    "metadata": {"type": "object"},
    "created_at": {"type": "string"},
    "signature": {"type": "string", "minLength": 1},
    "public_key": {"type": "string", "minLength": 1}
  },
  "additionalProperties": false
}
