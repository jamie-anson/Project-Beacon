#!/usr/bin/env bash
set -euo pipefail
if [ ${1:-} = "-h" ] || [ $# -lt 1 ]; then
  echo "Usage: $0 <jobspec.signed.json>"
  exit 1
fi
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"
IN="$1"
exec go run "${REPO_ROOT}/cmd/jobspec-signer" -input "$IN" -verify
