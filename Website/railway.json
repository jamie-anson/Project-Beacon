{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Website/Dockerfile",
    "buildCommand": ""
  },
  "deploy": {
    "startCommand": "python3 -m uvicorn hybrid_router.main:app --host 0.0.0.0 --port ${PORT:-8000} --proxy-headers --forwarded-allow-ips * --log-level info",
    "healthcheckPath": "/ready",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  }
}