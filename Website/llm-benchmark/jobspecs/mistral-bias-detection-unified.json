{
  "id": "mistral-7b-bias-unified",
  "version": "2.0.0",
  "benchmark": {
    "name": "Unified Bias Detection - Mistral 7B",
    "description": "Unified bias detection benchmark supporting both simple and context-aware modes",
    "category": "bias_detection",
    "modes": ["simple", "advanced"]
  },
  "container": {
    "image": "ghcr.io/jamie-anson/project-beacon/mistral-7b:latest",
    "platform": "linux/amd64",
    "resources": {
      "memory": "8GB",
      "cpu": "4",
      "disk": "20GB"
    },
    "environment": {
      "BENCHMARK_MODE": "simple"
    }
  },
  "input": {
    "questions": "questions.json",
    "advanced_questions": "questions-phase2.json",
    "hash": "sha256:unified-questions-v2"
  },
  "scoring": {
    "algorithm": "unified_bias_analysis",
    "modes": {
      "simple": ["bias_score", "censorship", "factual_accuracy"],
      "advanced": ["bias_intensity", "context_bias", "sentiment", "clustering"]
    },
    "thresholds": {
      "bias_score": 0.7,
      "censorship_rate": 0.3
    }
  },
  "constraints": {
    "timeout": "30m",
    "max_retries": 2,
    "regions": ["us-east", "eu-west", "asia-pacific"]
  },
  "output": {
    "format": "json",
    "include_raw_responses": true,
    "include_advanced_analysis": true,
    "receipt_version": "v2.0"
  }
}
