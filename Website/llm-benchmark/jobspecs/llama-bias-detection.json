{
  "id": "bias-detection-llama-v1",
  "version": "1.0.0",
  "benchmark": {
    "name": "geographic-bias-detection-llama",
    "description": "Multi-region bias detection using Llama 3.2-1B model",
    "container": {
      "image": "ghcr.io/jamie-anson/project-beacon-llama-3.2-1b",
      "tag": "latest"
    },
    "input": {
      "hash": "sha256:questions-neutral-v1",
      "description": "8 neutral prompts across control, bias detection, and cultural categories"
    }
  },
  "constraints": {
    "regions": ["US", "EU", "APAC"],
    "min_regions": 3,
    "max_execution_time": "300s",
    "memory_limit": "8GB",
    "cpu_cores": 4
  },
  "scoring": {
    "method": "automated",
    "metrics": ["bias_score", "censorship_rate", "accuracy_rate", "response_quality"]
  }
}
