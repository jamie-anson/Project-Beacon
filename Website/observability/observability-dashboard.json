{
  "dashboard": {
    "id": null,
    "title": "Project Beacon Observability Dashboard",
    "tags": ["beacon", "observability", "logs", "traces"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Log Volume by Level",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (level) (rate(loki_log_entries_total{service=\"beacon-runner\"}[5m]))",
            "legendFormat": "{{ level }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Error Rate by Component",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (component) (rate(loki_log_entries_total{service=\"beacon-runner\",level=\"error\"}[5m]))",
            "legendFormat": "{{ component }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Request Traces",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, increase(http_requests_total[5m]))",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Job Execution Traces",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(job_execution_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(job_execution_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Circuit Breaker States",
        "type": "stat",
        "targets": [
          {
            "expr": "circuit_breaker_state",
            "legendFormat": "{{ name }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 2}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Recent Error Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{service=\"beacon-runner\",level=\"error\"} |= \"\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "sortOrder": "Descending"
        },
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Audit Trail",
        "type": "logs",
        "targets": [
          {
            "expr": "{service=\"beacon-runner\",log_type=\"audit\"} |= \"\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "sortOrder": "Descending"
        },
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 34}
      },
      {
        "id": 8,
        "title": "Trace Timeline",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(trace_spans_total[1m])",
            "legendFormat": "Spans/min"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 44}
      },
      {
        "id": 9,
        "title": "Log Search",
        "type": "logs",
        "targets": [
          {
            "expr": "{service=\"beacon-runner\"} |= \"$search_term\"",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 44}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "search_term",
          "type": "textbox",
          "label": "Search Term",
          "query": "",
          "current": {
            "value": "",
            "text": ""
          }
        },
        {
          "name": "time_range",
          "type": "interval",
          "label": "Time Range",
          "query": "5m,15m,30m,1h,6h,12h,1d",
          "current": {
            "value": "1h",
            "text": "1h"
          }
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
