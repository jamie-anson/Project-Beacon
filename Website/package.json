{
  "name": "project-beacon-site",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build:static": "node scripts/build-static.js",
    "build:docs": "docusaurus build docs --out-dir ../dist/docs",
    "build:docs:with-cid": "DOCS_BUILD_CID=$(cat dist/docs-cid.txt 2>/dev/null || echo 'bafy...placeholder') docusaurus build docs --out-dir ../dist/docs",
    "build": "npm run build:static && npm run build:docs && npm run postbuild:cid && npm run build:docs:with-cid",
    "build:docs:standalone": "docusaurus build docs --out-dir dist-docs-standalone --base-url /",
    "version": "docusaurus docs:version 1.0.0",
    "dev:landing": "npx http-server -c-1 -p 3000 .",
    "dev:docs": "docusaurus start docs --port 3001 --base-url /docs/",
    "dev": "concurrently -k \"npm:dev:landing\" \"npm:dev:docs\"",
    "validate:schemas": "node scripts/validate-schemas.js",
    "postbuild:cid": "node scripts/postbuild-pin.js",
    "test:portal": "cd portal && npm test",
    "test:build": "node scripts/test-build-output.js",
    "test:api": "node scripts/test-job-payload.js",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test": "npm run test:portal && npm run test:build && npm run test:api && npm run test:e2e",
    "validate:pre-deploy": "node scripts/pre-deploy-validation.js",
    "submit:signed": "node scripts/submit-signed-job.js",
    "test:portal:signing": "node scripts/test-portal-signing.js",
    "generate:wallet-auth": "node scripts/generate-wallet-auth.js"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.4.0",
    "@docusaurus/preset-classic": "^3.4.0",
    "@docusaurus/theme-mermaid": "^3.4.0",
    "@docusaurus/types": "^3.4.0",
    "@playwright/test": "^1.55.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "axios": "^1.11.0",
    "concurrently": "^8.2.2",
    "ethers": "^5.7.2",
    "form-data": "^4.0.4",
    "fs-extra": "^11.3.1",
    "http-server": "^14.1.1",
    "playwright": "^1.55.0",
    "prism-react-renderer": "^2.4.0",
    "typescript": "^5.4.5"
  }
}
