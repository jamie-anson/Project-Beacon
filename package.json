{
  "name": "project-beacon-site",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build:static": "node scripts/build-static.js",
    "build:docs": "docusaurus build docs --out-dir ../dist/docs",
    "build": "npm run build:static && npm run build:docs",
    "build:docs:standalone": "docusaurus build docs --out-dir dist-docs-standalone --base-url /",
    "version": "docusaurus docs:version 1.0.0",
    "dev:landing": "npx http-server -c-1 -p 3000 .",
    "dev:docs": "docusaurus start docs --port 3001 --base-url /docs/",
    "dev": "concurrently -k \"npm:dev:landing\" \"npm:dev:docs\"",
    "validate:schemas": "node scripts/validate-schemas.js",
    "postbuild:cid": "node scripts/postbuild-pin.js"
  },
  "dependencies": {
    "json-stable-stringify": "^1.3.0"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.4.0",
    "@docusaurus/preset-classic": "^3.4.0",
    "@docusaurus/theme-mermaid": "^3.4.0",
    "@docusaurus/types": "^3.4.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "concurrently": "^8.2.2",
    "fs-extra": "^11.2.0",
    "http-server": "^14.1.1",
    "prism-react-renderer": "^2.4.0",
    "typescript": "^5.4.5"
  }
}
